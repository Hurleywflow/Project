{% extends "base.twig" %}
{% block title %}BreedsApp - Add Breed
{% endblock %}
{% block brand %}BreedsApp - Add Breed
{% endblock %}
{% block body %}
	<br>
	<br>
	<br>
	<div class="container">
		<div class="row">
			<div class="col-md-3"></div>
			<div class="col-md-6 box-blue text-center">Breed Form</div>
			<div class="col-md-3"></div>
		</div>
		<div class="row">
			<div class="col-md-3"></div>
			<div class="col-md-6 jumbotron">
				<form class="form-horizontal" action="" method="post" novalidate enctype="multipart/form-data">
					<h1>Breed Form</h1>
					<div class="form-group">
						<label class="control-label">Name:
						</label>
						<input value="" class="form-control" type="text" name="name" maxlength="30"/>
					</div>
					<div class="form-group">
						<label class="control-label">Origin:
						</label>
						<input value="" class="form-control" type="text" name="origin" maxlength="30"/>
					</div>
					<br>
					<div class="form-group">
						<label class="control-label">Type:
						</span>
					</label>
					<input value="" class="form-control" type="text" name="type" maxlength="30"/>
					<br>
				</div>
				<div class="form-group">
					<label class="control-label">Coat_colour:
					</label>
					<input value="" class="form-control" type="text" name="coat_colour" maxlength="30"/>
					<br>
				</div>
				<div class="form-group">
					<label class="control-label">Temperament:
					</label>
					<input value="" class="form-control" type="text" name="temperament" maxlength="30"/>
					<br>
				</div>
				<div class="form-group">
					<label class="control-label">Common_traits:
					</label>
					<input value="" class="form-control" type="text" name="common_traits" maxlength="30"/>
					<br>
				</div>
				<div class="form-group files">
					<label class="control-label">Photo Filename:
					</label>
					<input class="form-control" type="file" name="image" id="iamge"/>
					<br>
				</div>
				<div class="form-group">
					<button class="btn btn-blue btn-block" type="submit" name="submit">Submit</button>
				</div>
			</form>
		</div>
		<div class="col-md-3"></div>
	</div>
</div>{% endblock %}
