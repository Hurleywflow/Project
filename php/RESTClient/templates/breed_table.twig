{% extends "base.twig" %}
{% block title %}BreedsApp - Breed Table
{% endblock %}
{% block brand %}BreedsApp - Breed Table
{% endblock %}
{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-md-2"></div>
			<div class="col-md-8 box-blue text-center">Breed Table</div>
			<div class="col-md-2"></div>
		</div>
		<div class="row  ">
			<div class=" col-md-2"></div>
			<div class="col-md-8 jumbotron text-center justify-content-center align-align-items-center">
				<div class="table-responsive ">
					<div></div>
					<table class="table table-striped table-hover ">
						<tr>
							<th>Name</th>
							<th>Origin</th>
							<th>Type</th>
							<th>Coat_colour</th>
							<th>Temperament</th>
							<th>Common_traits</th>
							<th>Photo Filename</th>
						</tr>
						{% for row in records %}
							<tr>
								<td>{{ row.name }}</td>
								<td>{{ row.origin }}</td>
								<td>{{ row.type }}</td>
								<td>{{ row.coat_colour }}</td>
								<td>{{ row.temperament }}</td>
								<td>{{ row.common_traits }}</td>
								<td><img src="./static/assets/Photos/{{ row.filename }}" alt="{{ row.filename }}" width="100" hight="100"></td>
							{% endfor %}
						</tr>
					</table>
				</div>
				<a href="?action=getBreeds" class="btn btn-blue btn-block" tabindex="-1" role="button" aria-disabled="true">BACK</a>
			</div>
			<div class="col-md-2"></div>
		</div>
	</div>
{% endblock %}
